<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.StatusActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            tools:context=".view.StatusActivity">


            <TextView
                android:layout_width="275dp"
                android:layout_height="match_parent"


                android:gravity="start|center"
                android:paddingStart="@dimen/dimen10dp"
                android:paddingEnd="@dimen/dimen10dp"
                android:text="@string/Deliver"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/txtimageeditaddress"
                android:layout_width="71dp"
                android:layout_height="match_parent"
                tools:srcCompat="@mipmap/ic_editaddress_round" />


        </LinearLayout>


        <TextView
            android:id="@+id/txtuserName"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/txtuserAddress"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/txtuserAddress2"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/txtuserPhone"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen10dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            tools:context=".view.StatusActivity">


            <TextView
                android:id="@+id/txtcardno"
                android:layout_width="265dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingStart="@dimen/dimen10dp"
                android:paddingEnd="@dimen/dimen10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btndeletepayment"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                tools:srcCompat="@mipmap/ic_deletepayment_round" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@color/lightGray"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:text="Summary"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="113dp"
                android:layout_height="56dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/a"
                android:layout_width="233dp"
                android:layout_height="32dp"
                android:gravity="start|center"
                android:paddingStart="@dimen/dimen10dp"
                android:paddingEnd="@dimen/dimen10dp"
                android:textColor="@color/vDarkGray"
                android:textSize="@dimen/dimen14sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/c"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginBottom="@dimen/dimen10dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/b"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/d"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/lightGray"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:text="Ready for purchasing"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPlaceorder"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="@dimen/dimen70dp"
            android:background="@drawable/button_add_to_cart"
            android:textColor="@color/white"
            android:text="Place" />

        <LinearLayout
            android:id="@+id/productItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>