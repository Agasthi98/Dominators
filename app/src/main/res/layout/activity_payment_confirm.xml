<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.StatusActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            tools:context=".view.StatusActivity">


            <TextView
                android:layout_width="275dp"
                android:layout_height="match_parent"


                android:gravity="start|center"
                android:paddingStart="@dimen/dimen10dp"
                android:paddingEnd="@dimen/dimen10dp"
                android:text="@string/Deliver"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/txtimageeditaddress"
                android:layout_width="71dp"
                android:layout_height="match_parent"
                tools:srcCompat="@android:drawable/ic_menu_edit" />


        </LinearLayout>





        <TextView
            android:id="@+id/txtuserName"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/txtuserAddress"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/txtuserAddress2"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/txtuserPhone"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen10dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            tools:context=".view.StatusActivity">


            <TextView
                android:id="@+id/txtcardno"
                android:layout_width="271dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingStart="@dimen/dimen10dp"
                android:paddingEnd="@dimen/dimen10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btndeletepayment"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                tools:srcCompat="@android:drawable/ic_menu_delete" />


        </LinearLayout>







        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@color/lightGray"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:text="Summary"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen14sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/a"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/b"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/c"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen10dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/d"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />


        <LinearLayout
            android:id="@+id/productItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/lightGray"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:text="Ready for purchasing"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlaceorder"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="@dimen/dimen10dp"
            android:layout_marginBottom="@dimen/dimen10dp"
            android:background="@color/Brown"
            android:padding="@dimen/dimen10dp"
            android:text="@string/reorder"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen18sp"
            android:textStyle="bold" />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>