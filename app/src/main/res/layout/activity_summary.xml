<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Summary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.StatusActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            tools:context=".view.StatusActivity">


            <TextView
                android:layout_width="306dp"
                android:layout_height="match_parent"


                android:gravity="start|center"
                android:paddingStart="@dimen/dimen10dp"
                android:paddingEnd="@dimen/dimen10dp"
                android:text="@string/Deliver"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/txtimageeditaddress"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_editaddress_round" />


        </LinearLayout>


        <TextView
            android:id="@+id/txtuserName"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/txtuserAddress"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/txtuserAddress2"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/txtuserPhone"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen10dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            tools:context=".view.StatusActivity">


            <TextView
                android:id="@+id/txtcardno"
                android:layout_width="303dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingStart="@dimen/dimen10dp"
                android:paddingEnd="@dimen/dimen10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cart_item_delete_butto"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/ic_delete"
                android:backgroundTint="@color/deleteButton" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@color/lightGray"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:text="Summary"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen14sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/seller_item_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/display_cart_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/textColor"
                    app:layout_constraintStart_toEndOf="@+id/seller_price"
                    app:layout_constraintTop_toTopOf="@+id/seller_price" />

                <ImageView
                    android:id="@+id/display_cart_cake_image"
                    android:layout_width="108dp"
                    android:layout_height="113dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/cakeimg_foreground" />

                <TextView
                    android:id="@+id/display_cart_item_name"
                    android:layout_width="238dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:text="Chocolate Cake"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/textColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/display_cart_cake_image"
                    app:layout_constraintTop_toTopOf="@+id/display_cart_cake_image" />

                <TextView
                    android:id="@+id/seller_price"
                    android:layout_width="81dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:text="Rs. 1400"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/textColor"
                    app:layout_constraintEnd_toEndOf="@+id/display_cart_item_name"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/display_cart_cake_image"
                    app:layout_constraintTop_toBottomOf="@+id/display_cart_item_name" />

                <TextView
                    android:id="@+id/cart_item_quantity"
                    android:layout_width="139dp"
                    android:layout_height="29dp"
                    android:text="Qty: 1"
                    android:textAppearance="?android:textAppearanceLarge"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/display_cart_item_name"
                    app:layout_constraintTop_toBottomOf="@+id/seller_price"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/lightGray"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:text="Status"

            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:text="Ready for purchasing"
            android:textColor="@color/vDarkGray"
            android:textSize="@dimen/dimen16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPlaceorder"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="@dimen/dimen70dp"
            android:background="@drawable/button_background"
            android:text="Place"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/productItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>